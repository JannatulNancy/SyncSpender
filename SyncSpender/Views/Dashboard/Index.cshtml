@{
    ViewData["isDashboard"] = true;
}

<div class="main-content">
    <div class="container-fluid">
        <div class="row justify-content-center mb-4">
            <!-- Income Widget -->
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="d-flex flex-row widget summary income shadow-sm rounded">
                    <div class="d-flex align-items-center px-3">
                        <i class="fa-solid fa-arrow-up fa-2x"></i>
                    </div>
                    <div class="d-flex flex-column justify-content-center py-3 ps-3">
                        <span class="lead fw-semibold">Total Income</span>
                        <h1 class="display-6 fw-bold">@ViewBag.TotalIncome</h1>
                    </div>
                </div>
            </div>

            <!-- Expense Widget -->
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="d-flex flex-row widget summary expense shadow-sm rounded">
                    <div class="d-flex align-items-center px-3">
                        <i class="fa-solid fa-arrow-down fa-2x"></i>
                    </div>
                    <div class="d-flex flex-column justify-content-center py-3 ps-3">
                        <span class="lead fw-semibold">Total Expense</span>
                        <h1 class="display-6 fw-bold">@ViewBag.TotalExpense</h1>
                    </div>
                </div>
            </div>

            <!-- Balance Widget -->
            <div class="col-lg-4 col-md-12 mb-3">
                <div class="d-flex flex-row widget summary balance shadow-sm rounded">
                    <div class="d-flex align-items-center px-3">
                        <i class="fa-solid fa-scale-balanced fa-2x"></i>
                    </div>
                    <div class="d-flex flex-column justify-content-center py-3 ps-3">
                        <span class="lead fw-semibold">Balance</span>
                        <h1 class="display-6 fw-bold">@ViewBag.Balance</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>


 @* Doughnut and Spline chart *@

 <div class=" row mb-4">
     <div class="col-md-11">
         <div class="widget chart">
             
             <div class="p5">
                    <h4 style="font-family: 'Libertinus Serif', serif; font-weight: bold; text-align: center;">
                        Expense By Category
                    </h4>
             </div>

                <ejs-accumulationchart id="doughnutchart" enableSmartLabels background="#2D336B">
                    <e-accumulation-series-collection>
                        <e-accumulation-series
                            dataSource = "@ViewBag.DoughnutChartData"
                           xName="categoryTitleWithIcon" yName="amount"
                        innerRadius="45%" legendShape="Pentagon"
                        palettes=@(new string[]{"#0e8d76","#a4b219","#cb9b00","#8a442c","#0454b5","#7d0a0a","#822690","#4c2090","#313e93","#0096ac"}) >
                            <e-accumulationseries-datalabel name="formattedAmount" visible></e-accumulationseries-datalabel>
                        </e-accumulation-series>
                    </e-accumulation-series-collection>
                    <e-accumulationchart-legendsettings position="Top"
                         toggleVisibility="false" >
                         <e-legendsettings-textstyle color ="#fff" size ="1rem"></e-legendsettings-textstyle>

                    </e-accumulationchart-legendsettings>
                    <e-accumulationchart-tooltipsettings enable ></e-accumulationchart-tooltipsettings>
                </ejs-accumulationchart>
         </div>
     </div>   
    <div class=" col-md-11">
            <div class="widget chart">

                <div class="p5">
                    <h4 style="font-family: 'Libertinus Serif', serif; font-weight: bold; text-align: center;">
                        Income vs Expense
                    </h4>
                </div>
                <ejs-chart id="spline-chart" background="#2D336B"
                palettes=@(new string[]{"#54ffa9","#ffe91a"})>
                    <e-chart-primaryxaxis valueType="Category">
                        <e-majorgridlines width="0"></e-majorgridlines>
                        <e-majorticklines width="0"></e-majorticklines>
                    </e-chart-primaryxaxis>
                    <e-chart-primaryyaxis>
                        <e-majorgridlines width="1" color="#32414d" dashArray="3,5"></e-majorgridlines>
                        <e-majorticklines width="0"></e-majorticklines>
                        <e-linestyle width="0"></e-linestyle>
                    </e-chart-primaryyaxis>
                    <e-chart-chartarea> 
                        <e-chartarea-border width ="0" ></e-chartarea-border>
                    </e-chart-chartarea>
                    <e-series-collection>
                        <e-series dataSource="@ViewBag.SplineChartData" xName="day" width="3" yName="income" name="Income" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline" >  </e-series>
                        <e-series dataSource="@ViewBag.SplineChartData" xName="day" width="3"  yName="expense" name="Expense" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline"></e-series>
                    </e-series-collection>
                     <e-chart-legendsettings position="Top"  
                         toggleVisibility="false" >
                         <e-legendsettings-textstyle color ="#fff" size ="1rem"></e-legendsettings-textstyle>
                    </e-chart-legendsettings>
                    <e-chart-tooltipsettings enable shared ></e-chart-tooltipsettings>

                </ejs-chart>
            </div>
    </div>
    </div>
 </div>