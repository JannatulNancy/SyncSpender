@{
    ViewData["isDashboard"] = true;
}

<div class="main-content">
    <div class="container-fluid">
        <div class="row justify-content-center mb-4">
            <!-- Income Widget -->
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="d-flex flex-row widget summary income shadow-sm rounded">
                    <div class="d-flex align-items-center px-3">
                        <i class="fa-solid fa-arrow-up fa-2x"></i>
                    </div>
                    <div class="d-flex flex-column justify-content-center py-3 ps-3">
                        <span class="lead fw-semibold">Total Income</span>
                        <h1 class="display-6 fw-bold">@ViewBag.TotalIncome</h1>
                    </div>
                </div>
            </div>

            <!-- Expense Widget -->
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="d-flex flex-row widget summary expense shadow-sm rounded">
                    <div class="d-flex align-items-center px-3">
                        <i class="fa-solid fa-arrow-down fa-2x"></i>
                    </div>
                    <div class="d-flex flex-column justify-content-center py-3 ps-3">
                        <span class="lead fw-semibold">Total Expense</span>
                        <h1 class="display-6 fw-bold">@ViewBag.TotalExpense</h1>
                    </div>
                </div>
            </div>

            <!-- Balance Widget -->
            <div class="col-lg-4 col-md-12 mb-3">
                <div class="d-flex flex-row widget summary balance shadow-sm rounded">
                    <div class="d-flex align-items-center px-3">
                        <i class="fa-solid fa-scale-balanced fa-2x"></i>
                    </div>
                    <div class="d-flex flex-column justify-content-center py-3 ps-3">
                        <span class="lead fw-semibold">Balance</span>
                        <h1 class="display-6 fw-bold">@ViewBag.Balance</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>